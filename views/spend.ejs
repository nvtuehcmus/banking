      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card card-plain">
                <div class="card-header card-header-primary">
                  <h4 class="card-title mt-0">Thông tin tài khoản thanh toán</h4>
                  <p class="card-category">Một người dùng sở hữu tối đa 1 tài khoản thanh toán</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="">
                        <th>
                          Số tài khoản
                        </th>
                        <th>
                          Tiền gửi
                        </th>
                       
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                            <%= infoSpend[0].id %> 
                          </td>
                          <td id = "balance"><%= infoSpend[0].balance %> VND
                          </td>
                        </tr>
                        <script>
                         function change(){
                 
                                    var amount = document.getElementById("balance").innerHTML;
                                    
                                    if(amount.length>3){
                                    amount = amount.split(' ');
                                    console.log(amount);
                                    document.getElementById("balance").innerHTML = new Intl.NumberFormat().format(amount[0])+" VND";

                                    }
                                  }
                        </script>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
